{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtOptions": {
    "Issuer": "http://localhost",
    "Audience": "http://localhost",
    "Expires": 3600,
    "SecurityKey": "fastcore@1234",
    "RefreshTokenExpires": 86400
  },
  "AuditingOptions": {
    "HideErrors": true,
    "IsEnabled": true,
    "ApplicationName": "FastCore",
    "IsEnabledForAnonymousUsers": true,
    "AlwaysLogOnException": true,
    "IsEnabledForGetRequests": false
  },
  "ConnectionStrings": {
    "FastCoreConnection": "Data Source=(LocalDb)\\MSSQLLocalDB;Initial Catalog=FastCore;Integrated Security=SSPI;",
    "HealthCheckConnection": "Data Source=(LocalDb)\\MSSQLLocalDB;Initial Catalog=FastCore_Health;Integrated Security=SSPI;"
  },
  "Redis": {
    "ConnectionString": "127.0.0.1:6379",
    "DatabaseId": 0
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "FastCore-Api",
        "Uri": "http://localhost:5001/health"
      }
    ],
    //"Webhooks": [
    //  {
    //    "Name": "",
    //    "Uri": "",
    //    "Payload": "",
    //    "RestoredPayload": ""
    //  }
    //],
    "EvaluationTimeInSeconds": 20,
    "MinimumSecondsBetweenFailureNotifications": 60
  },
  "PingIp": "" //多个ip间逗号隔开
}
